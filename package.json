{
  "name": "boilerplate_reactjs_chakra_webpack",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "author": "Gabriel Rodrigues",
  "description": "This application is a simple boilerplate with robust lints and tests settings.",
  "repository": "https://github.com/Gabriel4420/template-example",
  "main": "./src/ui/index.js",
  "scripts": {
    "dev": "env-cmd -f .env.local webpack serve --progress --config webpack/webpack.local.js",
    "start": "env-cmd -f .env.prod webpack serve --open --config webpack/webpack.prod.js",
    "build": "env-cmd -f .env.prod webpack --config webpack/webpack.prod.js",
    "build:dev": "env-cmd -f .env.dev webpack --config webpack/webpack.dev.js",
    "lint": "eslint src --ext ts,tsx --max-warnings=0",
    "lint:fix": "eslint --fix src --ext ts,tsx",
    "format": "prettier --write .",
    "check:format": "prettier --check .",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "test": "jest --maxWorkers=50% --passWithNoTests",
    "test:w": "jest --watch --maxWorkers=25% --passWithNoTests",
    "check:update": "npm-check -u",
    "prepare": "husky install",
    "release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.0.12",
    "@chakra-ui/react": "^2.4.1",
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "framer-motion": "^7.6.11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.7",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/commit-analyzer": "9.0.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/release-notes-generator": "10.0.3",
    "@svgr/webpack": "^6.2.1",
    "@swc/core": "^1.2.205",
    "@swc/jest": "^0.2.21",
    "@testing-library/dom": "^8.14.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.0.0",
    "@types/react": "^18.0.20",
    "@types/react-dom": "^18.0.5",
    "@types/react-test-renderer": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "autoprefixer": "^10.4.13",
    "css-loader": "^6.7.1",
    "dotenv": "^16.0.2",
    "download": "^7.1.0",
    "env-cmd": "^10.1.0",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-import-resolver-typescript": "^3.1.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.5",
    "eslint-plugin-jest-dom": "^4.0.2",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-n": "^15.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^5.6.4",
    "file-loader": "^6.2.0",
    "find-versions": "^5.1.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.1",
    "image-webpack-loader": "^8.1.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "jest-svg-transformer": "^1.0.0",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.19",
    "postcss-loader": "^7.0.1",
    "postcss-preset-env": "^7.8.3",
    "prettier": "^2.7.1",
    "react-refresh": "^0.14.0",
    "react-test-renderer": "^18.2.0",
    "semantic-release": "^19.0.5",
    "semver-regex": "^4.0.5",
    "serve": "^14.1.2",
    "source-map-loader": "^4.0.0",
    "style-loader": "^3.3.1",
    "swc-loader": "^0.2.3",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.7.4",
    "webpack": "^5.76.0",
    "webpack-cli": "^5.0.0",
    "webpack-dev-server": "^4.9.2"
  }
}
